<div class="bold" style="margin-bottom:10px">Регистрация:</div>
<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
 <table>
   <tr>
     <td><label for="login">Логин: </label></td>
     <td><%= f.text_field :login %></td>
   </tr>
   <tr>
     <td><label for="email">Email: </label></td>
     <td><%= f.text_field :email %></td>
   </tr>
   <tr>
     <td><label for="password">Пароль: </label></td>
     <td><%= f.password_field :password %></td>
   </tr>
   <tr>
     <td><label for="password_confirmation">Еще раз пароль: </label></td>
     <td><%= f.password_field :password_confirmation %></td>
   </tr>
   <tr>
     <td colspan="2">
      <%= button "Регистрация", "register_button", :style => "width:120px;float:left;margin-top:10px;margin-right:10px", :submit => true %>
      <%= button "Отмена", "cancel", :style => "width:120px;float:left;margin-top:10px;margin-bottom:5px;", :klass => "modalClose" %>
    </td>
   </tr>
 </table>

 <div class="bold"><a id="login_link" href="#">Вход в систему</a></div>
<% end -%>
